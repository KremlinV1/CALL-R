# ============================================================
# Pon E Line Backend — Environment Configuration
# ============================================================
# Copy this file to .env and fill in values.
# Lines marked [REQUIRED] must be set before the server starts.
# Lines marked [REQUIRED IN PROD] are enforced when NODE_ENV=production.
# ============================================================

# ---- Core ----
PORT=4000
NODE_ENV=development

# [REQUIRED IN PROD] Frontend URL — used for CORS allowlist
FRONTEND_URL=http://localhost:3000

# [REQUIRED IN PROD] JWT signing secret — min 32 characters, generate with:
#   node -e "console.log(require('crypto').randomBytes(48).toString('base64'))"
JWT_SECRET=

# [REQUIRED IN PROD] AES-256 encryption key for stored API keys — exactly 32 characters, generate with:
#   node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_KEY=

# Internal API token for system-to-system calls (campaign executor, etc.)
INTERNAL_API_TOKEN=

# ---- Database [REQUIRED] ----
DATABASE_URL=postgresql://postgres:password@localhost:5432/poneline

# ---- Redis (optional, for future scaling) ----
REDIS_URL=redis://localhost:6379

# ---- Telephony — Vogent (primary voice AI provider) ----
# Can also be configured per-organization in Settings > Telephony
VOGENT_API_KEY=
VOGENT_BASE_AGENT_ID=
VOGENT_PHONE_NUMBER_ID=
VOGENT_PHONE_NUMBER=
VOGENT_DEFAULT_MODEL_ID=
# Publicly reachable URL for dial status webhooks (e.g. https://api.yourdomain.com)
VOGENT_WEBHOOK_URL=

# ---- Telephony — LiveKit (optional) ----
LIVEKIT_URL=
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=
LIVEKIT_SIP_TRUNK_OUTBOUND=
LIVEKIT_SIP_TRUNK_INBOUND=
LIVEKIT_PHONE_NUMBER=

# ---- Telephony — Vonage (optional, legacy) ----
VONAGE_API_KEY=
VONAGE_API_SECRET=
VONAGE_PHONE_NUMBER=

# ---- Telephony — SignalWire (optional) ----
SIGNALWIRE_PROJECT_ID=
SIGNALWIRE_API_TOKEN=
SIGNALWIRE_SPACE_URL=

# ---- Telephony — Twilio (optional) ----
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ---- Telephony — Telnyx (optional) ----
TELNYX_API_KEY=
TELNYX_PUBLIC_KEY=

# ---- AI Providers (optional, for LiveKit-based agents) ----
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DEEPGRAM_API_KEY=
CARTESIA_API_KEY=
ELEVENLABS_API_KEY=
